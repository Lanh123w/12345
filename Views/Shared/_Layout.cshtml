@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Đặt Là Có Ăn là Ghiền</title>

    <!-- Bootstrap & CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cosmic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />

    <!-- Orbitron font for glitch title -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- 🌌 Cosmic Background -->
    <div id="cosmic-background">
        <div class="nebula" style="top:10%; left:20%; --nebula-color: var(--nebula-1);"></div>
        <div class="nebula" style="top:50%; left:60%; --nebula-color: var(--nebula-2);"></div>
        <div class="nebula" style="top:80%; left:30%; --nebula-color: var(--nebula-3);"></div>
        <div class="nebula" style="top:30%; left:80%; --nebula-color: var(--nebula-4);"></div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand glitch-title" data-text="Đặt Là Có Ăn là Ghiền" asp-controller="Home" asp-action="Index">
                    Đặt Là Có Ăn là Ghiền
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FoodItems" asp-action="Categories">🍽 Món ăn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">🛒 Giỏ hàng</a>
                        </li>
                        

                        <!-- Dropdown gộp các mục phụ -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="moreMenu" role="button" data-bs-toggle="dropdown">
                                📂 Thêm
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Cart" asp-action="MyOrder">📦 Đơn hàng của tôi</a></li>
                                <li><a class="dropdown-item" asp-controller="MapTest" asp-action="MapTest">🗺️ Xem bản đồ </a></li>
                               

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    var user = await UserManager.GetUserAsync(User);
                                    var roles = await UserManager.GetRolesAsync(user);
                                    if (roles.Contains("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="AdminOrder" asp-action="Index">🧑‍💼 Quản lý đơn hàng</a></li>
                                        <li><a class="dropdown-item" asp-controller="FoodItems" asp-action="Index">📋 Danh sách món ăn</a></li>
                                        <li><a class="dropdown-item" asp-controller="Cart" asp-action="DiscountCodes">➕ Thêm mã giảm giá</a></li>
                                       

                                    }
                                }
                            </ul>
                        </li>
                    </ul>

                    <!-- User menu -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                                    👋 @UserManager.GetUserName(User)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item m-0 p-0">
                                            <button type="submit" class="btn btn-link w-100 text-start text-danger">🚪 Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">🔐 Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">📝 Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="discount-popup" class="toast position-fixed bottom-0 end-0 m-3 text-bg-success" role="alert">
        <div class="toast-body">
            🎉 Mã giảm giá đã được áp dụng thành công!
        </div>
    </div>

    <footer class="footer">
        <div class="section-title text-center text-light py-3">
            &copy; 2025 - Đặt Là Có Ăn là Ghiền
        </div>
    </footer>

    <audio id="ting-audio" src="~/audio/ting.mp3" preload="auto"></audio>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
