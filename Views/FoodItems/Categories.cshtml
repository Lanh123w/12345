@model IEnumerable<WebApplication3.Models.Category>
@{
    ViewData["Title"] = "Danh mục món ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="category-section">
    <h2 class="section-title">📂 Danh mục món ăn</h2>
    <div class="category-grid">
        @foreach (var category in Model)
        {
            <a asp-action="ItemsByCategory" asp-route-id="@category.Id" class="category-card">
                <div class="category-icon">🍽</div>
                <div class="category-name">@category.Name</div>
            </a>
        }
    </div>
    <div class="text-end mt-4">
        <a class="btn btn-view-all" asp-controller="FoodItems" asp-action="AllItems">👀 Hiện tất cả món ăn</a>
    </div>
</div>
<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        font-family: 'Quicksand', sans-serif;
        color: #333;
    }

    .category-section {
        padding: 40px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.1);
        max-width: 1000px;
        margin: auto;
    }

    .section-title {
        font-size: 28px;
        font-weight: 800;
        color: #007bff;
        text-align: center;
        margin-bottom: 40px;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }

    .category-card {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 123, 255, 0.3);
        }

    .category-icon {
        font-size: 32px;
        margin-bottom: 10px;
    }

    .category-name {
        font-size: 18px;
        font-weight: 600;
    }

    .btn-view-all {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .category-card {
        background: linear-gradient(135deg, var(--nebula-1), var(--nebula-2));
        box-shadow: 0 4px 12px var(--nebula-3);
    }

        .category-card:hover {
            background: linear-gradient(135deg, var(--nebula-2), var(--nebula-5));
            box-shadow: 0 6px 18px var(--nebula-3);
        }


        .btn-view-all:hover {
            background-color: #0056b3;
        }
</style>
